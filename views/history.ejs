<script>
    var socket = io.connect();
    socket.on("full_database", function (data) {
        data.forEach(element => {
            $("#id-content").append("<p>" + element.id + "</p>")
            $("#time-content").append("<p>" + element.time + "</p>")
            $("#temper-content").append("<p>" + element.temp + "</p>")
            $("#humi-content").append("<p>" + element.humi + "</p>")
            $("#lux-content").append("<p>" + element.lux + "</p>")
        });
    });
</script>

<!-- local time -->
<script>
    setInterval(function () {
        var whatTimeIsThis = new Date()
        whatTimeIsThis = whatTimeIsThis.toString().slice(4, 24);
        document.getElementById("RTC").innerHTML = whatTimeIsThis
        document.getElementById("rtc").innerHTML = whatTimeIsThis
    }, 1000)
